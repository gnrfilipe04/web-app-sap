<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core" >
   	<ViewSettingsDialog
	   	id="filterDialog"
		confirm="handleConfirm">
		<groupItems>
			<ViewSettingsItem text="Group by Customer" key="Customer/CompanyName"/>
			<ViewSettingsItem text="Group by Order Period" key="OrderDate" />
			<ViewSettingsItem text="Group by Shipped Period" key="ShippedDate" />
		</groupItems>
		<filterItems>
			<ViewSettingsFilterItem text="Orders" key="1" multiSelect="false">
				<items>
					<ViewSettingsItem text="Only Orders With Region" key="region" />
					<ViewSettingsItem text="Only Orders Without Region" key="noRegion" />
				</items>
			</ViewSettingsFilterItem>
		</filterItems>
	</ViewSettingsDialog>
</core:FragmentDefinition>